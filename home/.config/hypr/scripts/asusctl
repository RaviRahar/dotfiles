#!/bin/bash

case "$1" in
    --koff)
    asusctl led-pow-2 keyboard
    notify-send -t 2000 -h string:x-dunst-stack-tag:asusctl_notif "Keyboard backlight off"
    ;;
    --kon)
    asusctl led-pow-2 keyboard -Sab
    notify-send -t 2000 -h string:x-dunst-stack-tag:asusctl_notif "Keyboard backlight on"
    ;;
    --rog)
    rog-control-center
    ;;
    --led) 
    asusctl led-mode -n
    ;;
    --pro)
    asusctl profile -n && \
        notify-send -t 2000 -h string:x-dunst-stack-tag:asusctl_notif "$(asusctl profile -p | tail -1)"
    ;;
esac
