# Suspend the system when battery level drops to 5% or lower
SUBSYSTEM=="power_supply", ATTR{status}=="Discharging", ATTR{capacity}=="[6-9]", RUN+="/usr/bin/notify-send 'Warning' 'Battery low! Going into hibernation in under a minute'; /usr/bin/sleep 60; /usr/bin/systemctl hibernate"
SUBSYSTEM=="power_supply", ATTR{status}=="Discharging", ATTR{capacity}=="10", RUN+="/usr/bin/notify-send 'Warning' 'Battery low! Going into hibernation in under a minute'; /usr/bin/sleep 60; /usr/bin/systemctl hibernate"
# Suspend the system when battery level drops to 5% or lower
SUBSYSTEM=="power_supply", ATTR{status}=="Discharging", ATTR{capacity}=="[0-5]", RUN+="/usr/bin/notify-send 'Warning' 'Battery low! Going into hibernation in under 20 seconds'; /usr/bin/sleep 20; /usr/bin/systemctl hibernate"
