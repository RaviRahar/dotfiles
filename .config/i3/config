# Screenshot
#
bindsym --release Print exec --no-startup-id "maim -u -m 10 $HOME/Pictures/Screenshots/screenshot-$(date +%Y-%m-%d_%H-%M-%S).png"
bindsym --release Shift+Print exec --no-startup-id "maim -u -s -m 10 $HOME/Pictures/Screenshots/screenshot-$(date +%Y-%m-%d_%H-%M-%S).png"
bindsym --release Mod1+Shift+Print exec --no-startup-id "maim -u -m 10 -i $(xdotool getactivewindow) $HOME/Pictures/Screenshots/screenshot-$(date +%Y-%m-%d_%H-%M-%S).png"
#
# Resize Mode Settings
#
bindsym $mod+Shift+r mode "resize"
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
#
#
bindsym $mod+Shift+m mode "youtube-music"
mode "youtube-music" {

    bindsym m exec --no-startup-id ytfzf -smDN
    bindsym h exec --no-startup-id ytfzf -mHDN
    bindsym q exec --no-startup-id killall mpv 

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
#
# Launcher Mode Settings
#
# Press $mod+o followed by either f, t, Esc or Return to launch firefox,
# thunderbird or return to the default mode, respectively.
bindsym $mod+o mode "launcher"
mode "launcher" {
    bindsym e exec --no-startup-id nemo; mode "default"
    bindsym f exec --no-startup-id firefox;  mode "default"
    bindsym t exec --no-startup-id $term;  mode "default"
    bindsym n exec --no-startup-id $term -e nvim;  mode "default"
    bindsym g exec --no-startup-id $term -e gtypist;  mode "default"
    bindsym c exec --no-startup-id $term -e nmtui-connect;  mode "default"

    bindsym q      mode "default"
    bindsym w      mode "launcherSustain"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

mode "launcherSustain" {
    bindsym e exec --no-startup-id nemo
    bindsym f exec --no-startup-id firefox
    bindsym t exec --no-startup-id $term
    bindsym n exec --no-startup-id $term -e nvim
    bindsym g exec --no-startup-id $term -e gtypist
    bindsym c exec --no-startup-id $term -e nmtui-connect

    bindsym q      mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}
#
# Power Mode Settings
#
bindsym $mod+Shift+p mode "power"
mode "power" {
    bindsym p         exec systemctl poweroff
    bindsym r         exec systemctl reboot 
    bindsym k         exec dm-tool lock; mode "default"
    bindsym l         exec dm-tool switch-to-greeter; mode "default"
    #bindsym e         exec --no-startup-id i3-msg exit, mode "default"
    #bindsym h         exec systemctl hibernate 
    #bindsym s        exec sudo  /lib/systemd/systemd-sleep hybrid-sleep 
    #bindsym s         exec pm-suspend

    
    bindsym q         mode "default"
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

# Floating windows
# coustom commands related to floating modes
bindsym $mod+c [floating] move position center

floating_maximum_size 1280 x 720
#floating_maximum_size -1 x -1



#move floating position center
for_window [floating] move absolute position center border pixel 0

for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable

for_window [window_role="task_dialog|bubble|page-info|Preferences|pop-up"] floating enable
for_window [window_role="Open Files"] floating enable sticky
for_window [window_role="File Operation Progress"] floating enable sticky
for_window [window_role="Save As"] floating enable

for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable

# custom rules for specific windows
for_window [class="Nemo"] floating enable
for_window [class="imv"] floating enable
for_window [class="mpv"] floating enable
# Custom class that I can use in projects
for_window [title="Android Emulator"] floating enable
for_window [class="Window"] floating enable
for_window [title="AlacrittyFloat"] floating enable

# Sticky window
for_window [instance="file_progress"]  sticky enable

